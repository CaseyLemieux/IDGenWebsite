@using IDGenWebsite.Models
@model IEnumerable<StudentModel>
@{
    ViewData["Title"] = "Excel Reader Demo";
}

<!DOCTYPE html>
<html>
<body>
    @using (Html.BeginForm("TestExcel", "Login", FormMethod.Post))
    {
        <input type="submit" value="Get Students" />
    }
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GradeLevel)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GradeLevel)
                    </td>
                    <td>
                        <a asp-action="PrintID">Print ID Badge</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</body>
</html>