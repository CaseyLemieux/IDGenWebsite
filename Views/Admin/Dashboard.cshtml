@{
    ViewData["Title"] = "Admin Dashboard";
}
<!--First Row-->
<div class="row d-flex justify-content-center">
    <div class="card-deck">
        <!--Orgs Card-->
        <div class="card dashboard-card" style="width: 18rem;" onclick="">
            <div class="card-body">
                <h4 class="card-title">Organizations</h4>
                <p class="card-text" id="orgsCount"></p>
               
            </div>
        </div>
        <!--Academic Sessions Card-->
        <div class="card dashboard-card" style="width: 18rem;">
            <div class="card-body">
                <h4 class="card-title">Academic Sessions</h4>
                <p class="card-text" id="sessionsCount"></p>
               
            </div>
        </div>
        <!--Users Card-->
        <div class="card dashboard-card" style="width: 18rem;">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <p class="card-text" id="usersCount"></p>
            </div>
        </div>
    </div>
</div>
<!--Second Row-->
<div class="row d-flex justify-content-center">
    <div class="card-deck">
        <!--Courses Card-->
        <div class="card dashboard-card" style="width: 18rem;">
            <div class="card-body">
                <h4 class="card-title">Courses</h4>
                <p class="card-text" id="coursesCount"></p>
            </div>
        </div>
        <!--Classes Card-->
        <div class="card dashboard-card" style="width: 18rem;">
            <div class="card-body">
                <h4 class="card-title">Classes</h4>
                <p class="card-text" id="classesCount"></p>
            </div>
        </div>
        <!--Enrollments Card-->
        <div class="card dashboard-card" style="width: 18rem;" >
            <div class="card-body">
                <h4 class="card-title">Enrollments</h4>
                <p class="card-text" id="enrollmentsCount"></p>
            </div>
        </div>
    </div>
</div>
<!--Third Row-->
<div class="row d-flex justify-content-center">
    <div class="card-deck">
        <!--No Id Photo Card-->
        <div class="card dashboard-card" style="width: 18rem;">
            <div class="card-body">
                <h4 class="card-title">No Id Photo</h4>
                <p class="card-text" id="noIdCount"></p>
            </div>
        </div>
        <!--No QR Code Card-->
        <div class="card dashboard-card" style="width: 18rem;">
            <div class="card-body">
                <h4 class="card-title">No Qr Code</h4>
                <p class="card-text" id="noQrCount"></p>
            </div>
        </div>
        <!--Invalid Email Card-->
        <div class="card dashboard-card" style="width: 18rem;">
            <div class="card-body">
                <h4 class="card-title">Invalid Email</h4>
                <p class="card-text" id="invalidEmailCount"></p>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $.ajax({
                url: '/RosterData/GetOrgsCount',
                type: 'GET',
                success: function (data) {
                    $('#orgsCount').text(data);
                },
                error: function (data) {
                    console.log('Error getting org count');
                }
            });

            $.ajax({
                url: '/RosterData/GetSessionsCount',
                type: 'GET',
                success: function (data) {
                   $('#sessionsCount').text(data);
                },
                error: function (data) {
                    console.log('Error getting session count');
                }
            });

            $.ajax({
                url: '/RosterData/GetUsersCount',
                type: 'GET',
                success: function (data) {
                    $('#usersCount').text(data);
                },
                error: function (data) {
                    console.log('Error getting user count');
                }
            });

            $.ajax({
                url: '/RosterData/GetCoursesCount',
                type: 'GET',
                success: function (data) {
                    $('#coursesCount').text(data);
                },
                error: function (data) {
                    console.log('Error getting courses count');
                }
            });

            $.ajax({
                url: '/RosterData/GetClassesCount',
                type: 'GET',
                success: function (data) {
                   $('#classesCount').text(data);
                },
                error: function (data) {
                    console.log('Error getting classes count');
                }
            });

            $.ajax({
                url: '/RosterData/GetEnrollmentsCount',
                type: 'GET',
                success: function (data) {
                    $('#enrollmentsCount').text(data);
                },
                error: function (data) {
                    console.log('Error getting enrollments count');
                }
            });

            $.ajax({
                url: '/RosterData/GetNoIdPhotoCount',
                type: 'GET',
                success: function (data) {
                    $('#noIdCount').text(data);
                },
                error: function (data) {
                    console.log('Error getting No Id count');
                }
            });

            $.ajax({
                url: '/RosterData/GetNoQrCodeCount',
                type: 'GET',
                success: function (data) {
                    $('#noQrCount').text(data);
                },
                error: function (data) {
                    console.log('Error getting No Qr count');
                }
            });

            $.ajax({
                url: '/RosterData/GetInvalidEmailCount',
                type: 'GET',
                success: function (data) {
                    $('#invalidEmailCount').text(data);
                },
                error: function (data) {
                    console.log('Error getting Invalid Email count');
                }
            });

        });

    </script>

}