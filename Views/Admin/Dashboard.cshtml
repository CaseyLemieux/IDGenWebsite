                dataType: "html",
                success: function (data) {
                    var div = document.getElementById("panel");
                    div.innerHTML = data;
                },
                error: function (data) {
                    console.log('Error loading ');
                }
            });
        }

        function UploadFiles() {
            $.ajax({
                url: '/Admin/GetUploadFilesPartial',
                type: 'GET',
                cache: false,
                dataType: "html",
                success: function (data) {
                    var div = document.getElementById("panel");
                    div.innerHTML = data;
                },
                error: function (data) {
                    console.log('Error getting file partial');
                }
            });

        }

        function Settings() {

        }

        function CreateUserPartial() {
            $.ajax({
                url: '/Admin/GetCreateUserPartial',
                type: 'GET',
                cache: false,
                dataType: "html",
                success: function (data) {
                    var div = document.getElementById("addUserModalBody");
                    div.innerHTML = data;
                    $('#addUserModal').modal('show');
               
                },
                error: function (data) {
                    console.log('Error getting file partial');
                }
            });
        }

        function SubmitNewUser() {

        }

        function Logout() {
            $.ajax({
                url: '/Identity/Account/Logout',
                type: 'POST',
                cache: false,
                dataType: "html",
                success: function (data) {
                    var div = document.getElementById("panel");
                    div.innerHTML = data;
                },
                error: function (data) {
                    console.log('Error getting file partial');
                }
            });
        }

        function SearchStudent() {
            var text = $(studentTextField).val();
            console.log(text);
            $.ajax({
                url: '/Student/SearchStudents',
                type: 'GET',
                cache: false,
                data: { "searchString": text },
                dataType: "html",
                success: function (data) {
                    var div = document.getElementById("panel");
                    div.innerHTML = data;
                },
                error: function (data) {
                    console.log('Error getting users partial');
                }
            });
        }

    </script>

}