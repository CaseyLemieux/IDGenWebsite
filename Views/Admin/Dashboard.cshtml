    <script type="text/javascript">

        $(document).ready(function () {
            //This retrieved the data for the autocomplete on products
            $.ajax({
                url: '/IDOrder/GetIdOrdersPartial',
                type: 'GET',
                cache: false,
                dataType: "html",
                success: function (data) {
                    var div = document.getElementById("panel");
                    div.innerHTML = data;
                },
                error: function (data) {
                    console.log('Error loading ');
                }
            });

        
        });
        // The function takes Form and the event object as parameter
        function SubmitNewUser(frm, caller) {
            caller.preventDefault();
            var form = document.getElementById('CreateUserForm');
            //var fdata = new FormData(form);
            var fdata = $('#CreateUserForm').serialize();
            //var fdata = form.serialize();
            console.log(fdata);
            console.log(form.method);
            console.log(form.action);
            $.ajax({
                type: form.method,
                url: form.action,
                dataType: 'json',
                data: fdata,
                processData: false,
                //contentType: false,
                success: function (data) {
                    $('#addUserModal').modal('hide');
                    ViewUsers();
                },
                error: function (data) {
                    alert('failure');
                }
            });
        }

        function SubmitFocusIds(inputId, caller) {
            caller.preventDefault;
            var input = document.getElementById(inputId);
            var files = input.files;
            var formData = new FormData();
            for (var i = 0; i != files.length; i++) {
                formData.append("idPdfs", files[i]);
            }

            $.ajax(
                {
                    url: '/Admin/UploadIds',
                    data: formData,
                    processData: false,
                    contentType: false,
                    dataType: "html",
                    type: "POST",
                    success: function (data) {
                        console.log("Focus Ids Uploaded!");
                        var div = document.getElementById("panel");
                        div.innerHTML = data;
                    },
                    error: function (data) {
                        console.log("Error Uploading Ids!")
                    }
                }
            );

        }

        function SubmitStudentForm(inputId, caller) {
            caller.preventDefault;
            var input = document.getElementById(inputId);
            var files = input.files;
            console.log(files);
            var formData = new FormData();
            for (var i = 0; i != files.length; i++) {
                console.log(files[i]);
                formData.append("focusFiles", files[i]);
            }

            $.ajax(
                {
                    url: '/Admin/UploadFocus',
                    data: formData,
                    processData: false,
                    contentType: false,
                    dataType: "html",
                    type: "POST",
